@model Password;

@{
	Layout = null;
}
<style>
	body {
		background-color: #0f1724;
		color: #fff;
	}
	h1 {
		margin-top: 100px;
		margin-bottom: 50px;
		font-size: 48px;
		text-align: center;
	}
	form {
		margin: 0 auto;
		width: 800px;
		display: flex;
		flex-direction: column;
		gap: 24px;
	}
	.input-box {
		background-color: #152d54;
		color: #fff;
		border: none;
		font-size: 36px;
		height: 60px;
		border-radius: 8px;
	}
	.input-box:focus {
		outline: none;
	}
	.btn-submit {
		border: none;
		background: none;
		border-radius: 8px;
		padding: 18px 36px;
		font-size: 24px;
		font-weight: 600;
		color: #fff;
		background-color: #152d54;
		cursor: pointer;
	}
</style>

<h1>Check how strong is your password</h1>
<form asp-controller="CheckPassword" asp-action="Validate" method="post">
	<input class="input-box" id="password" name="password" type="text" required />
	<input class="btn-submit" type="submit" value="Check" />
</form>
